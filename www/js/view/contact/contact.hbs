<div class="page-content">
	<div class="contact-header">
		<div class="item-photo">
			 {{#if model.picture.medium}}
                <img src="{{model.picture.medium}}">
            {{else}}
                <img src="img/contact.jpg" width="44">
            {{/if}}
		</div>
		<div class="header-text">
			<h3>{{model.name.first}} {{model.name.last}}</h3>
			<p>{{model.name.title}}</p>
		</div>
	</div>
	<div class="list-block">
		<div class="list-group">
			<ul>
				{{#if model.phone}}
					<li>
						<a href="tel:{{model.phone}}" class="item-link item-content external">
							<div class="item-media"><i class="icon ion-ios7-telephone-outline"></i></div>
							<div class="item-inner">
								<div class="item-title">{{model.phone}}</div>
							</div>
						</a>
					</li>
				{{/if}}
				{{#if model.email}}
					<li>
						<a href="mailto:{{model.email}}" class="item-link item-content external">
							<div class="item-media"><i class="icon ion-ios7-email-outline"></i></div>
							<div class="item-inner">
								<div class="item-title">{{model.email}}</div>
							</div>
						</a>
					</li>
				{{/if}}
				{{#if model.location.city}}
					<li class="item-content">
						<div class="item-media"><i class="icon ion-ios7-world-outline"></i></div>
						<div class="item-inner">
							<div class="item-title">{{model.location.city}}</div>
						</div>
					</li>
				{{/if}}
			</ul>
		</div>
	</div>
</div>



